{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the FinTrack Mini application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity."
        },
        "name": {
          "type": "string",
          "description": "The user's name."
        },
        "categories": {
            "type": "array",
            "items": { "type": "string" },
            "description": "User-defined spending categories."
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "Transaction": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Transaction",
      "type": "object",
      "description": "Represents a single financial transaction.",
      "properties": {
        "Date": { "type": "string", "format": "date-time" },
        "Amount": { "type": "number" },
        "Type": { "type": "string", "enum": ["Expense", "Income"] },
        "Category": { "type": "string" },
        "Notes": { "type": "string" },
        "userId": { "type": "string" }
      },
      "required": ["Date", "Amount", "Type", "Category", "Notes", "userId"]
    },
    "Budget": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "Budget",
        "type": "object",
        "description": "Represents a budget for a specific category.",
        "properties": {
            "Category": { "type": "string" },
            "MonthlyBudget": { "type": "number" }
        },
        "required": ["Category", "MonthlyBudget"]
    },
    "Income": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Income",
      "type": "object",
      "description": "Represents the user's monthly income.",
      "properties": {
        "amount": { "type": "number" }
      },
      "required": ["amount"]
    },
    "Savings": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Savings",
      "type": "object",
      "description": "Represents the user's monthly savings goal.",
      "properties": {
        "amount": { "type": "number" }
      },
      "required": ["amount"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/backend/entities/User"
          },
          "description": "Stores user data. Only the authenticated user can write to their own document."
        }
      },
      {
        "path": "/users/{userId}/transactions/{transactionId}",
        "definition": {
            "entityName": "Transaction",
            "schema": { "$ref": "#/backend/entities/Transaction" },
            "description": "Stores individual transactions for a user. Only the user can access their own transactions."
        }
      },
      {
          "path": "/users/{userId}/budgets/{budgetId}",
          "definition": {
              "entityName": "Budget",
              "schema": { "$ref": "#/backend/entities/Budget" },
              "description": "Stores budget configurations for a user."
          }
      },
      {
        "path": "/users/{userId}/financials/income",
        "definition": {
          "entityName": "Income",
          "schema": { "$ref": "#/backend/entities/Income" },
          "description": "Stores the user's income. Only the user can access their own income data."
        }
      },
      {
        "path": "/users/{userId}/financials/savings",
        "definition": {
          "entityName": "Savings",
          "schema": { "$ref": "#/backend/entities/Savings" },
          "description": "Stores the user's savings goal. Only the user can access their own savings data."
        }
      }
    ]
  }
}
